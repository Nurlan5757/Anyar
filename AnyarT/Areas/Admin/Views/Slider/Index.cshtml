
@{
    ViewData["Title"] = "Index";
}
@model List<GetSliderAdminVM>

<h5 class="card-title fw-semibold mb-4">Team</h5>
<a asp-action="Create" class="btn btn-outline-success m-1 float-end mb-2">Create</a>
<div class="table-responsive w-100 ">
    <table class="table table-bordered text-nowrap mb-0 align-middle">
        <thead class="text-dark fs-4">
            <tr>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Id</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">FullName</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Subtitle1</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Subtitle2</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">image</h6>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>
                        @data.Id
                    </td>
                    <td>
                        @data.FullName
                    </td>
                    <td>
                        @data.Subtitle1
                    </td>
                    <td>
                        @data.Subtitle2
                    </td>
                    <td class="border-bottom-0">
                        <img src="@data.ImageUrl" width="50" />
                    </td>
                    <td class="border-bottom">
                        <a asp-action="Update" asp-route-id="@data.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@data.Id" class="btn btn-warning">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



